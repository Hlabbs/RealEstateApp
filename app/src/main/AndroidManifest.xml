<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add required permissions here -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />


    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mawanele"
        tools:targetApi="31">

        <!-- Set RegisterActivity as the launcher activity -->
        <activity
            android:name=".RegisterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Define LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
        </activity>

        <!--Define SignOut-->
        <activity
            android:name=".SignOut"
            android:exported="true">

        </activity>

        <!-- Define SettingsActivity -->
        <activity android:name=".SettingsActivity" />

        <!-- Define Notifications -->
        <activity
            android:name=".Notifications"
            android:exported="true">

        </activity>

        <!-- Define Notifications -->
        <activity
            android:name=".SettingsNotification"
            android:exported="true">

        </activity>

        <!-- Define Settings Support -->
      <activity
            android:name=".SettingsSupport"
            android:exported="true">
    </activity>

        <!-- Define Ticket Activity -->
        <activity
            android:name=".Ticket"
            android:exported="true">
        </activity>

        <!-- Define Incident Activity -->
        <activity
            android:name=".Incident"
            android:exported="true">
        </activity>

        <activity
            android:name=".SettingsAccount"
            android:exported="true">
        </activity>

        <!-- Define VerificationActivity -->
        <activity
            android:name=".VerificationActivity"
            android:exported="true">
        </activity>

        <!-- Define HomeActivity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true">
        </activity>

    </application>
</manifest>
